{% extends 'base.html.twig' %}

{% block title %}Hello WishController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>



    <div class="container">

        <div class="row">
            <div class="col">
                <h4 class="mt-5"> {{ idee.getTitle() }} </h4>
                <br>
                <p class="fst-italic blockquote-footer"> {{ idee.getAuthor() }} {{ idee.dateCreated|date("d/m/Y H:m") }} </p>
                <p> {{ idee.getDescription }} </p>
            </div>
        </div>


    </div>
{% endblock %}
